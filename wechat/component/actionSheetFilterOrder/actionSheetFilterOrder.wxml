<!--component/actionSheetFilterOrder/actionSheetFilterOrder.wxml-->
<view class='dialog_bg' wx:if="{{show}}" bindtap="cancel" catchtouchmove="false"></view>
<view class="popup follow-up {{show?'show':''}}">
  <view class="title">筛选订单</view>
  <view class="list_box">
    <!-- 收入 -->
    <view>
      <view class="tit">收入</view>
      <view class="flex box">
        <view class="item">
          <text class="active">收款</text>
        </view>
        <view class="item">
          <text>退款</text>
        </view>
        <view class="item">
          <text>充值</text>
        </view>
        <view class="item">
          <text>手续费</text>
        </view>

      </view>
    </view>
    <!-- 支出 -->
    <view>
      <view class="tit">支出</view>
      <view class="flex box">
        <view class="item">
          <text class="active">消费</text>
        </view>
        <view class="item">
          <text>提现</text>
        </view>
        <view class="item">
          <text>退款</text>
        </view>
        <view class="item">
          <text>手续费</text>
        </view>
      </view>
    </view>
  </view>
  <view class="btn_box">
    <view class="flex">
      <view class="item">
        <view class="close" bindtap="cancel">取消</view>
      </view>
      <view class="item">
        <view class="ok">确定</view>
      </view>
    </view>
  </view>
</view>