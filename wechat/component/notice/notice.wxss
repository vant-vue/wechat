/* 授权弹窗 */

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 100;
  display: none;
  background: rgba(0, 0, 0, 0.4);
}

.popup.show {
  display: block;
}

@keyframes zoomIn {
  from {
    opacity: 0;
  }

  50% {
    opacity: 1;
  }
}

.popup .main {
  display: flex;
  flex-wrap: wrap;
  opacity: 1;
  width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: zoomIn 0.6s;
}

.popup .content {
  background: #fff;
  border-radius: 10rpx;
  width: 100%;
  text-align: center;
  padding: 30rpx;
}

.popup .content .success {
  width: 100rpx;
  height: 100rpx;
  margin: 40rpx 40rpx 20rpx;
}

.close {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translate(-50%, 0%);
}

button {
  background: #3E5CF2;
  color: #fff;
}

.title{
  padding-bottom: 20rpx;
}