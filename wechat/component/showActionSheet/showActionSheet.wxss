/* component/showActionSheet/showActionSheet.wxss */
.dialog_bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  color: #fff;
  z-index: 99;
}

.popup {
  position: fixed;
  width: 100%;
  background: #fff;
  box-shadow: 3rpx 3rpx 15rpx 0px rgba(0, 0, 0, 0.1);
  z-index: 99;
  bottom: -685rpx;
  transition: 0.3s;
}

.popup.show {
  bottom: 0;
}

.list {
  border-bottom: 20rpx solid rgba(237, 237, 237, 1);
  max-height: 500rpx;
  overflow-y:auto;
}

.list .item {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(237, 237, 237, 1);
  color: #010102;
}

.list .item.top {
  color: #83838b;
}

.cancel {
  text-align: center;
  font-size: 28rpx;
  color: #83838b;
  height: 100rpx;
  line-height: 100rpx;
  background: rgba(255, 255, 255, 1);
}