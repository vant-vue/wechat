/* pages/subPackagesC/order_details/order_details.wxss */

page {
  padding-bottom: 100rpx;
}

.wait {
  color: #fff;
  background: #090;
}

.success {
  color: #fff;
  background: #f90;
}

.cancel {
  color: #fff;
  background: #ccc;
}

.status_box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}

.status_box .flex {
  align-items: center;
  text-align: center;
}

.status_box .flex .btn {
  /* border: 1rpx solid #090; */
  margin: 15rpx;
  padding: 20rpx 0;
  color: #3e5cf2;
  border-radius: 10rpx;
}

.status_box .flex .btn.yet {
  color: #fff;
  background: #3e5cf2;
}

.status_box .flex .btn.can {
  color: #f00;
  border: 1rpx solid #f00;
}

.apply_box {
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.f00 {
  color: #f00;
}

.f06 {
  color: #06f;
}

.ccc {
  color: #999;
}

.details_box {
  margin: 20rpx;
  border-radius: 10rpx;
}

.details_box .title {
  padding: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.details_box .title text {
  padding-left: 10rpx;
  font-size: 28rpx;
}

.details_box .title .line {
  display: inline-block;
  height: 26rpx;
  border-left: 10rpx solid #000;
  position: relative;
  bottom: -2rpx;
}

.details_box .content {
  padding: 20rpx;
}

.details_box .li {
  align-items: center;
  padding-bottom: 20rpx;
}

.details_box .li .tit {
  color: #999;
  margin: 0 40rpx;
}

.details_box .head_img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.details_box .name {
  margin-left: 30rpx;
  font-size: 28rpx;
}

.details_box .book_img {
  width: 40rpx;
  height: 40rpx;
}

.details_box .refund {
  margin-bottom: 20rpx;
  align-items: center;
}

.details_box .refund_btn {
  padding: 20rpx 30rpx;
  background: #3e5cf2;
  border-radius: 10rpx;
  color: #fff;
  margin-left: 20rpx;
}

.details_box .money {
  text-align: center;
  background: #f2f2f2;
  border-radius: 10rpx;
  height: 80rpx;
  /* padding: 20rpx 0; */
}

.details_box .tit_t {
  color: #999;
}
