<!--pages/subPackagesA/group_buying_solitaire/group_buying_solitaire.wxml-->
<view class="main_box">
  <!-- 标题 -->
  <view class="flex bg box">
    <view class="left">
      <text class="tit">请输入接龙标题</text>
      <text class="red">*</text>
    </view>
    <view class="item">
      <input type="text"></input>
    </view>
  </view>
  <!-- 图片 -->
  <view class="bg box">
    <view class="tit2">建议您填写吸引眼球商品介绍并上传图片</view>
    <upload-img bind:upload="get_img_list"></upload-img>
  </view>
  <!-- 商品 -->
  <view class="shop_box">
    <view class="flex bg box">
      <view class="left left_width">
        <text class="tit3">商品1</text>
        <text class="red">*</text>
      </view>
      <view class="item">
        <input type="text" placeholder="请输入商品名称"></input>
      </view>
      <view class="tit4" bindtap="jump" data-page="editDetails">编辑详情</view>
    </view>
    <view class="flex bg box">
      <view class="left left_width">
        <text class="tit3">价格</text>
        <text class="red">*</text>
      </view>
      <view class="item">
        <input type="text" placeholder="0.00"></input>
      </view>
    </view>
    <view class="flex bg box">
      <view class="left left_width">
        <text class="tit3">规格</text>
        <!-- <text class="red">*</text> -->
      </view>
      <view class="item">
        <input type="text" placeholder="尺寸、重量、颜色等"></input>
      </view>
    </view>
    <view class="flex bg box">
      <view class="left left_width">
        <text class="tit3">库存</text>
        <!-- <text class="red">*</text> -->
      </view>
      <view class="item">
        <input type="text" placeholder="不限"></input>
      </view>
    </view>
    <view class="flex bg box tc">
      <view class="item">
        <text class="add">+添加新商品</text>
      </view>
      <view class="item">
        <text class="delete">删除商品</text>
      </view>
    </view>
  </view>
  <!-- 支付 物流 -->
  <view class="shop_box">
    <view class="flex bg box2">
      <view class="left">
        <text class="tit3">微信支付</text>
      </view>
      <view class="item">
      </view>
      <view class="tit5">接龙产品收取0.9%手续费</view>
    </view>
    <view class="flex bg box2" bindtap="jump" data-page="logistics_mode">
      <view class="left">
        <text class="tit3">物流</text>
      </view>
      <view class="item tr">
        <text class="tit2 mr20">请选择</text>
      </view>
      <view>
        <text class='icon_right'></text>
      </view>
    </view>
    <view class="flex bg box2">
      <view class="left">
        <text class="tit3">开始时间</text>
      </view>
      <view class="item tr">
        <picker mode="date" value="{{date}}" start="2020-04-01" bindchange="bindDateChange">
          <text class="tit2 mr20">当前选择: {{date?date:'--'}}</text>
        </picker>
      </view>
      <view>
        <text class='icon_right'></text>
      </view>
    </view>
    <view class="flex bg box2">
      <view class="left">
        <text class="tit3">结束时间</text>
      </view>
      <view class="item tr">
        <picker mode="date" value="{{date}}" start="2020-04-01" bindchange="bindDateChange">
          <text class="tit2 mr20">当前选择: {{date?date:'--'}}</text>
        </picker>
      </view>
      <view>
        <text class='icon_right'></text>
      </view>
    </view>
  </view>
  <!-- 电话 -->
  <view class="shop_box">
    <view class="flex bg box">
      <view class="left left_width">
        <text class="tit3">电话</text>
        <text class="red">*</text>
      </view>
      <view class="item">
        <input type="text" placeholder="请输入客服电话"></input>
      </view>
    </view>
  </view>
  <!-- 接龙 -->
  <view class="shop_box">
    <view class="flex bg box">
      <view class="left">
        <text class="tit3">允许他人复制接龙</text>
      </view>
      <view class="item">

      </view>
      <view>
        <checkbox class="cb"></checkbox>
      </view>
    </view>
  </view>
  <!-- 按钮 -->
  <view class="btn">
    <button type="primary" style="width:100%">发布</button>
  </view>
</view>